@model System.Collections.Generic.List<HSE_Solution7_EMailService.Models.User>

<a asp-action="Create">Регистрация нового пользователя</a>

<h2>Список пользователей</h2>

<!-- Форма для ввода параметров limit и offset -->
<form asp-action="IndexPart" method="get">
    <div class="form-group">
        <label for="limit">Количество:</label>
        <input type="number" name="limit" id="limit" class="form-control" min="1" required />
    </div>
    <div class="form-group">
        <label for="offset">Начиная с:</label>
        <input type="number" name="offset" id="offset" class="form-control" min="0" required />
    </div>
    <button type="submit" class="btn btn-primary">Показать часть списка</button>
</form>

<table>
    <thead>
    <tr>
        <th>Имя</th>
        <th>Email</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>
                <a asp-controller="User" asp-action="Details" asp-route-Email="@user.Email">
                    @user.Email
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
