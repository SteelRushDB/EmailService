@model Msg

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SenderId"></label>
        <input asp-for="SenderId" class="form-control" />
        <span asp-validation-for="SenderId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReceiverId"></label>
        <input asp-for="ReceiverId" class="form-control" />
        <span asp-validation-for="ReceiverId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject"></label>
        <input asp-for="Subject" class="form-control"/>
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <input asp-for="Content" class="form-control"/>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}